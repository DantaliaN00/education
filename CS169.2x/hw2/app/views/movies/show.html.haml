-# in app/views/movies/show.html.haml

%h2 Details about #{@movie.title}

%ul#details
  %li
    Rating:
    = @movie.rating
  %li
    Director:
    = @movie.director
  %li
    Released on:
    = @movie.release_date.strftime("%B %d, %Y")

%h3 Description:

%p#description= @movie.description

= link_to 'Average Score for this film', movies_score_path(@movie)
<br/>
= link_to 'Find Movies With Same Director', movies_director_path(@movie)
<br/>
= link_to 'Find movies seen by viewers of this film', movies_viewed_with_path(@movie)
<br/>
= link_to 'Edit', edit_movie_path(@movie)
<br/>
= button_to 'Delete', movie_path(@movie), :method => :delete, :confirm => 'Are you sure?'
= link_to 'Back to movie list', movies_path
