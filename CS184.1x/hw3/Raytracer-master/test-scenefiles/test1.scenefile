#this is just one sphere at the very center with
#one light on the side
size 300 300
maxdepth 6 
output image.tga

maxvertnorms 200
maxverts 200

camera 0 -3 0 0 0 0 0 0 1 45

#light off to the left of the sphere
point -3 0 0 1.0 1.0 1.0 

ambient 0.1 0.1 0.1

sphere 0 0.0 0.0 0.5
diffuse 0.9 0.0 0.0
specular 0.2 0.2 0.2
shininess 0.20

