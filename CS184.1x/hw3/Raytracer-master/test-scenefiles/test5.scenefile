#this is just one sphere at the very center with
#one light on the side
size 300 300
maxdepth 6 
output image.tga

maxvertnorms 200
maxverts 200

camera 0 -5 0 0 0 0 0 0 1 45

#light off to the left of the sphere
point 0.0 -5.0 5 0.7 0.7 0.7 

ambient 0.0 0.0 0.0

sphere 0 0 0 0.8
diffuse 0.0 0.0 0.0
specular 0.7 0.7 0.7
shininess 0.1

